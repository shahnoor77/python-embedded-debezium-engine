# Environment Variables for DB Sync

# Configuration
CONFIG_FILE=/app/config/config.yaml

# Logging
LOG_LEVEL=INFO

# Source Database
SOURCE_DB_TYPE=
SOURCE_DB_HOST=
SOURCE_DB_PORT=5432
SOURCE_DB_NAME=
SOURCE_DB_USER=
SOURCE_DB_PASSWORD=

# Target Database
TARGET_DB_TYPE=mysql
TARGET_DB_HOST=
TARGET_DB_PORT=3306
TARGET_DB_NAME=
TARGET_DB_USER=
TARGET_DB_PASSWORD=
MYSQL_ROOT_PASSWORD = 

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_GROUP_ID=db-sync-consumer-group

# Performance
MAX_WORKERS=10
BATCH_SIZE=1000
PARALLEL_TABLES=4

# Features
ENABLE_INITIAL_LOAD=true
ENABLE_CDC=true
AUTO_CREATE_TABLES=true
AUTO_DETECT_SCHEMA_CHANGES=true
APPLY_DELETES=true



